# =============================================================================
# CodePark v2 - Pre-Release Dependencies Configuration
# =============================================================================
# This configuration uses pre-release (next/latest) versions of all dependencies
# for cutting-edge features and experimental capabilities
# =============================================================================

# ============== SERVER CONFIGURATION ==============
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# ============== DATABASE CONFIGURATION ==============
MONGODB_URL=mongodb+srv://user:password@cluster.mongodb.net/codepark-dev
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_TLS=false
MONGODB_CA_CERT=
MONGODB_CLIENT_CERT=
MONGODB_CLIENT_KEY=

# ============== REDIS CACHE CONFIGURATION ==============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false
REDIS_CA_CERT=
REDIS_CLIENT_CERT=
REDIS_CLIENT_KEY=

# ============== JWT AUTHENTICATION ==============
JWT_SECRET=your_development_jwt_secret_here_min_32_chars_required
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=your_development_refresh_secret_here_min_32_chars_required
JWT_REFRESH_EXPIRY=30d

# ============== SECURITY & CORS ==============
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_DOMAINS=localhost,127.0.0.1

# ============== FEATURE FLAGS ==============
ENABLE_GRAPHQL=true
ENABLE_WEBHOOKS=true

# ============== PRE-RELEASE SPECIFIC SETTINGS ==============
# These enable cutting-edge experimental features
WASM_ENABLED=true
EXPERIMENTAL_NET_IMPORTS=true
TENSORFLOW_WASM=true
EXPERIMENTAL_MODULES=true

# ============== OBSERVABILITY ==============
SENTRY_DSN=
DATADOG_API_KEY=
OPENTELEMETRY_ENABLED=false

# ============== EDGE COMPUTING ==============
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=

# ============== KAFKA CONFIGURATION ==============
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=codepark-client

# ============== BULLMQ CONFIGURATION ==============
BULLMQ_REDIS_URL=redis://localhost:6379

# ============== AI/ML SETTINGS ==============
TENSORFLOW_CPP_MIN_LOG_LEVEL=2
NODE_OPTIONS=--experimental-wasm-modules --experimental-net-imports
