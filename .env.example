# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# Security Configuration
ALLOWED_ORIGIN=*
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-separate-refresh-secret-optional
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
GAME_RATE_LIMIT_WINDOW_MS=300000
GAME_RATE_LIMIT_MAX=20

# Game Settings
MAX_CONCURRENT_GAMES=1000
GAME_EXPIRY_MINUTES=10

# Redis Configuration (optional - falls back to in-memory if not available)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# WebSocket Configuration
WS_ENABLED=true
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30000

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# API Configuration
API_VERSION=v1
MAX_REQUEST_SIZE=100kb

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Cache Configuration
CACHE_TTL=300
CACHE_ENABLED=true

# SECURITY NOTES:
# - JWT_SECRET: Must be a strong random string in production
# - JWT_REFRESH_SECRET: Optional separate secret for refresh tokens (recommended)
#   If not set, JWT_SECRET will be used for both access and refresh tokens
# - Change all secrets before deploying to production

# EXPERIMENTAL WARNING
# This project uses pre-release (next/latest) package versions
# Monitor security advisories regularly
