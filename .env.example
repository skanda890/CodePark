# CodePark v2.0.0 - Environment Configuration Template
# Copy this file to .env.local or .env.{environment}.local
# Replace placeholders with your actual values
# NEVER commit actual secrets to the repository!

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
PORT=3000
HOST=localhost

# ================================
# LOGGING
# ================================
LOG_LEVEL=info
LOG_BUFFER_SIZE=1000
LOG_FILE=/var/log/codepark/app.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=10
LOG_HTTP_ENDPOINT=https://logs.example.com/api/logs
LOG_HTTP_HEADERS={"Authorization":"Bearer YOUR_LOG_API_KEY"}

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ADDITIONAL_CORS_ORIGINS=

# ================================
# DATABASE
# ================================
# Format: mongodb+srv://USERNAME:PASSWORD@HOST/DATABASE
MONGODB_URI=mongodb+srv://DB_USERNAME:DB_PASSWORD@cluster.mongodb.net/codepark

# ================================
# REDIS CACHE
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# ================================
# IP WHITELISTING
# ================================
IP_WHITELIST_MODE=off
IP_WHITELIST=10.0.0.0/8,192.168.0.0/16
MAX_REQUESTS_PER_IP=5000

# ================================
# CACHING
# ================================
CACHE_TTL=300000
CACHE_MAX_SIZE=10000
CACHE_BACKEND=memory

# ================================
# COMPRESSION
# ================================
COMPRESSION_LEVEL=6
COMPRESSION_MIN_SIZE=1024

# ================================
# HEALTH CHECK
# ================================
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_THRESHOLD=3

# ================================
# API KEYS
# ================================
API_KEY=sk_dev_your_api_key_here
API_KEY_PRODUCTION=
API_KEY_STAGING=

# ================================
# FEATURE FLAGS
# ================================
FEATURE_RATE_LIMITING=true
FEATURE_CACHING=true
FEATURE_COMPRESSION=true
FEATURE_HEALTH_CHECKS=true

# ================================
# SECURITY (PRODUCTION ONLY)
# ================================
SECURE_COOKIES=false
HSTSMaxAge=31536000
HSTSIncludeSubDomains=false

# ================================
# MONITORING (PRODUCTION ONLY)
# ================================
METRICS_ENDPOINT=
ALERT_EMAIL=

# ================================
# DEBUG
# ================================
DEBUG=codepark:*

# ================================
# NOTES
# ================================
# Development (.env.local):
#   - Use local/test credentials
#   - Enable debug logging
#   - Can use localhost services
#
# Staging (.env.staging.local):
#   - Use staging cluster credentials
#   - Moderate logging
#   - Use staging endpoints
#
# Production (.env.production.local - LOCAL ONLY):
#   - NEVER commit production secrets
#   - Use CI/CD secrets instead
#   - Use production credentials
#   - Minimal logging
#
# CI/CD (GitHub Actions):
#   - Use GitHub repository secrets
#   - Secrets injected during deployment
#   - No .env.production file needed
#
# Kubernetes:
#   - Use Kubernetes secrets
#   - Mounted as environment variables
#   - No .env files needed
