{
  "name": "codepark-advanced",
  "version": "3.0.0",
  "description": "CodePark - Advanced platform with AI, real-time collaboration, and security-hardened features",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",
    "dev": "cross-env NODE_ENV=development node --watch --experimental-network-imports --experimental-wasm-modules index.js",
    "dev:ai": "cross-env NODE_ENV=development node --watch --experimental-wasm-modules ai-server.js",
    "game": "node index.js --game",
    "graphql": "node graphql-server.js",
    "edge:dev": "wrangler dev",
    "edge:deploy": "wrangler deploy",
    "test": "node --test --experimental-test-coverage tests/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage tests/**/*.test.js",
    "test:ai": "node --test tests/ai/**/*.test.js",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "security-check": "npm audit && npm outdated && snyk test",
    "security:monitor": "snyk monitor",
    "update:dependencies": "npm update && npm audit fix",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "benchmark": "node --expose-gc benchmarks/index.js",
    "profile": "node --prof index.js",
    "inspect": "node --inspect-brk index.js",
    "docker:build": "docker build -t codepark:3.0 .",
    "docker:run": "docker run -p 3000:3000 codepark:3.0",
    "k8s:deploy": "kubectl apply -f k8s/",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "opentelemetry": "node --require @opentelemetry/auto-instrumentations-node/register index.js"
  },
