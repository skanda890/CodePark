{
  "name": "codepark",
  "version": "2.0.0",
  "description": "Code playground with enhanced features",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "express": "latest",
    "mongoose": "latest",
    "redis": "latest",
    "axios": "latest",
    "speakeasy": "latest",
    "qrcode": "latest",
    "socket.io": "latest",
    "dotenv": "latest",
    "cors": "latest",
    "helmet": "latest"
  },
  "devDependencies": {
    "jest": "latest",
    "supertest": "latest",
    "nodemon": "latest",
    "eslint": "latest"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "keywords": [
    "code",
    "playground",
    "monitoring",
    "webhooks",
    "mfa"
  ],
  "author": "skanda890",
  "license": "MIT"
}
