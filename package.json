{
  "name": "codepark",
  "version": "1.0.0",
  "description": "Comprehensive development toolkit and utilities platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npm install --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "npm run lint --workspaces",
    "start:all": "npm run start --workspaces",
    "start:games": "cd packages/games-multiplayer && npm start",
    "start:bios": "cd packages/bios-info && dotnet run",
    "start:security": "cd packages/update-dependencies && npm start",
    "start:backup": "cd packages/backup-manager && npm start",
    "start:compiler": "cd packages/code-compiler && npm start"
  },
  "keywords": [
    "codepark",
    "toolkit",
    "utilities",
    "games",
    "bios",
    "security",
    "backup",
    "compiler"
  ],
  "author": "CodePark Contributors",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.33.0",
    "jest": "^29.3.1"
  }
}
