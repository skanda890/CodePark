# Test environment variables
NODE_ENV=test
PORT=3001

# Database
MONGODB_URL=mongodb://localhost:27017/codepark-test
MONGODB_USER=test
MONGODB_PASSWORD=test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=test-secret-key-min-32-characters-long-1234567
JWT_REFRESH_SECRET=test-refresh-key-min-32-characters-long1234567
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Security
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=1

# GraphQL
GRAPHQL_ENABLED=true
GRAPHQL_DEBUG=true

# Webhooks
WEBHOOK_ENABLED=true
WEBHOOK_MAX_RETRIES=3
WEBHOOK_TIMEOUT=5000
