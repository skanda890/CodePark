# Security-focused npm configuration

# Lock dependencies - prevents implicit upgrades (security mitigation)
package-lock=true
save-exact=true

# Disable automatic script execution (security mitigation against supply chain attacks)
ignore-scripts=false
# Note: Set to true in production for maximum security, false for development

# Audit on install
audit=true
audit-level=moderate

# Strict SSL
strict-ssl=true

# Legacy peer deps for compatibility with experimental packages
legacy-peer-deps=true

# Engine strict - enforce Node.js version requirements
engine-strict=true

# Progress - show progress during install
progress=true

# Save prefix - use exact versions
save-prefix=

# Fund - disable funding messages
fund=false
