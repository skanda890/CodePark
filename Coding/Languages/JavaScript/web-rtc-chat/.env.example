# Web-RTC Chat Environment Configuration
# Copy this file to .env and update values for your environment

# Server Port
PORT=3000

# Environment
NODE_ENV=development

# Encryption Secret (CHANGE THIS IN PRODUCTION!)
ENCRYPTION_SECRET=your-super-secret-key-change-in-production-12345

# CORS Settings
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebRTC STUN Servers (optional - uses defaults if not set)
STUN_SERVER_1=stun:stun.l.google.com:19302
STUN_SERVER_2=stun:stun1.l.google.com:19302

# Database (for future use)
# DB_URL=mongodb://localhost:27017/webrtc-chat
# DB_NAME=webrtc-chat

# JWT Secret (for future authentication)
# JWT_SECRET=your-jwt-secret-key

# Email Settings (for future notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Analytics (optional)
# ANALYTICS_ENABLED=false
# ANALYTICS_SERVICE=google

# Feature Flags
FEATURE_FILE_SHARING=true
FEATURE_SCREEN_SHARING=true
FEATURE_ENCRYPTION=true
FEATURE_GROUP_CALLS=false
