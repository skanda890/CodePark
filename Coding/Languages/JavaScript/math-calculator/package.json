{
  "name": "math-calculator",
  "version": "2.0.0",
  "description": "Advanced math calculator with arbitrary precision and large number support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env NODE_ENV=development node server.js",
    "prod": "cross-env NODE_ENV=production node server.js",
    "audit:report": "npm audit",
    "audit": "npm audit || npm audit fix",
    "audit:fix": "npm audit fix",
    "update:deps": "npx npm-check-updates -u && npm install",
    "update:latest": "npm update && npm install express@latest helmet@latest mathjs@latest axios@latest socket.io@latest decimal.js@latest express-rate-limit@latest",
    "update:warn": "echo '⚠️  WARNING: update:latest may introduce BREAKING CHANGES. Use carefully and test thoroughly. Consider using update:deps for interactive updates instead.'"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "big-integer": "^1.6.52",
    "big.js": "^7.0.1",
    "crypto-js": "^4.2.0",
    "decimal.js": "^10.4.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "mathjs": "^15.1.0",
    "nerdamer": "^1.1.13",
    "readline-sync": "^1.4.10",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "cross-env": "^7.0.3"
  },
  "keywords": [
    "math",
    "calculator",
    "large-numbers",
    "arbitrary-precision",
    "batch-processing",
    "metrics",
    "caching",
    "api"
  ],
  "author": "SkandaBT",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skanda890/CodePark.git",
    "directory": "Coding/Languages/JavaScript/math-calculator"
  },
  "bugs": {
    "url": "https://github.com/skanda890/CodePark/issues"
  },
  "homepage": "https://github.com/skanda890/CodePark#readme"
}
